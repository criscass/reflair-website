const testimonials = [
 {
  name: 'Ilze',
  description:
   'Renovation, Decor and Accessories, Wall Treatments, Flooring, Lighting, Room Layout, Upholstery',
  message:
   '“Mia, thank you so much for what you have done to give the house a new life. You have done more than what we could have imagined. Thank you for dreaming together and getting every detail right and merging our styles and tastes. It feels like home! Thank you!”',
 },
 {

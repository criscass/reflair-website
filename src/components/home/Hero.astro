<style>
 :root {
  --animation-time: 2000ms;
 }
 .slides-container {
  height: 70vh;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
 }

 img {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  top: 0;
  left: 0;
  animation: fade 15s infinite alternate;
  animation-timing-function: cubic-bezier(0.57, 0.03, 0.36, 0.97);
 }

 .slide-pic:nth-of-type(5) img {
  animation-delay: 0s;
 }
 .slide-pic:nth-of-type(4) img {
  animation-delay: 3s;
 }
 .slide-pic:nth-of-type(3) img {
  animation-delay: 6s;
 }
 .slide-pic:nth-of-type(2) img {
  animation-delay: 9s;
 }
 .slide-pic:nth-of-type(1) img {
  animation-delay: 12s;
 }

 @keyframes fade {
  0% {
   opacity: 1;
  }
  20% {
   opacity: 0;
  }
  40% {
   opacity: 0;
  }
  60% {
   opacity: 0;
  }
  80% {
   opacity: 0;
  }
  100% {
   opacity: 1;
  }
 }

 .title {
  z-index: 100;
  position: relative;
 }
 .container {
  overflow: hidden;
  text-align: center;
  color: white;
  font-weight: 900;
  font-family: FuturaBold;
 }

 .container h1 {
  font-size: 72px;
  margin: 0;
  margin-bottom: 0.7rem;
  line-height: 0.9;
  animation: riflair-load 1s;
 }
 .container h2 {
  font-size: 36px;
  margin: 0;

  animation: the-art-of-load var(--animation-time);
 }

 .line-element {
  display: inline-block;
  height: 4px;
  width: 100px;
  background-color: white;
  margin-bottom: 0.5rem;
  animation: line-element-load var(--animation-time);
 }

 @media screen and (max-width: 1036px) {
  .container h1 {
   font-size: 64px;
  }
  .container h2 {
   font-size: 32px;
  }
 }

 @media screen and (max-width: 480px) {
  .container h1 {
   font-size: 48px;
   letter-spacing: 0.1em;
   margin-bottom: 0.5rem;
  }
  .container h2 {
   font-size: 28px;
   margin-bottom: 0.2rem;
  }
  2 .line-element {
   width: 70px;
   background-color: white;
   margin-bottom: 0.4rem;
   animation: line-element-load var(--animation-time);
  }
 }

 .des {
  margin: 20px;
  display: block;
  text-shadow: 0 0 10px black;
  animation: des-load var(--animation-time);
  margin-bottom: 2rem;
  animation-timing-function: ease-out;
 }

 .hero-button {
  animation: button-load var(--animation-time);
 }

 @keyframes riflair-load {
  0% {
   opacity: 0;
  }
  100% {
   opacity: 1;
  }
 }

 @keyframes the-art-of-load {
  0% {
   transform: translatex(20%);
   opacity: 0;
  }
  100% {
   transform: translateY(0);
   opacity: 1;
  }
 }

 @keyframes button-load {
  0% {
   transform: scale(0);
  }
  100% {
   transform: scale(1);
  }
 }
 @keyframes des-load {
  0% {
   transform: translatex(100%);
   opacity: 0;
  }
  100% {
   transform: translateY(0);
   opacity: 1;
  }
 }

 @keyframes line-element-load {
  0% {
   transform: scale(0);
  }
  100% {
   transform: scale(1);
  }
 }
</style>

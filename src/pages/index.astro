---
import About from '../components/home/About.astro';
import Hero from '../components/home/Hero.astro';
import Testimonials from '../components/home/Testimonials.astro';
import Layout from '../layouts/Layout.astro';
import MeetMia from '../components/home/MeetMia.astro';
import FlairInjections from '../components/home/FlairInjections.astro';
import Projects from '../components/home/Projects.astro';
---

<Layout
 description="Loads of inspiration to make any interior seem fresh and updated again."
 title="Reflair interiors"
>
 <Hero />
 <About />
 <MeetMia />
 <FlairInjections />
 <Projects />
 <Testimonials />
</Layout>

<style>
 :root {
  --animation-time: 2000ms;
 }

 .hero-img {
  height: 750px;
  overflow: hidden;
  background: url(/assets/hero.jpg) no-repeat center;
  background-size: cover;

  margin-bottom: 5rem;
  display: flex;
  align-items: center;
  justify-content: center;
 }

 .container {
  overflow: hidden;
  text-align: center;
  color: white;
  font-weight: 900;
  font-family: FuturaBold;
 }

 .container h1 {
  font-size: 72px;
  margin: 0;
  margin-bottom: 0.7rem;
  line-height: 0.9;
  animation: riflair-load 1s;
 }
 .container h2 {
  font-size: 36px;
  margin: 0;

  animation: the-art-of-load var(--animation-time);
 }

 .line-element {
  display: inline-block;
  height: 4px;
  width: 100px;
  background-color: white;
  margin-bottom: 0.5rem;
  animation: line-element-load var(--animation-time);
 }

 @media screen and (max-width: 1036px) {
  .container h1 {
   font-size: 64px;
  }
  .container h2 {
   font-size: 32px;
  }
 }

 @media screen and (max-width: 480px) {
  .container h1 {
   font-size: 48px;
   letter-spacing: 0.1em;
   margin-bottom: 0.5rem;
  }
  .container h2 {
   font-size: 28px;
   margin-bottom: 0.2rem;
  }
  .hero-img {
   height: 550px;
   margin-bottom: 2rem;
  }
  .line-element {
   width: 70px;
   background-color: white;
   margin-bottom: 0.4rem;
   animation: line-element-load var(--animation-time);
  }
 }

 .des {
  margin: 20px;
  display: block;
  text-shadow: 0 0 10px black;
  animation: des-load var(--animation-time);
  margin-bottom: 2rem;
  animation-timing-function: ease-out;
 }

 .hero-button {
  animation: button-load var(--animation-time);
 }

 @keyframes riflair-load {
  0% {
   opacity: 0;
  }
  100% {
   opacity: 1;
  }
 }

 @keyframes the-art-of-load {
  0% {
   transform: translatex(20%);
   opacity: 0;
  }
  100% {
   transform: translateY(0);
   opacity: 1;
  }
 }

 @keyframes button-load {
  0% {
   transform: scale(0);
  }
  100% {
   transform: scale(1);
  }
 }
 @keyframes des-load {
  0% {
   transform: translatex(100%);
   opacity: 0;
  }
  100% {
   transform: translateY(0);
   opacity: 1;
  }
 }

 @keyframes line-element-load {
  0% {
   transform: scale(0);
  }
  100% {
   transform: scale(1);
  }
 }
</style>

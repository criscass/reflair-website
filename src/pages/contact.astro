---
import ContactInfo from '../components/contact/ContactInfo.astro';
import Layout from '../layouts/Layout.astro';
import GoogleMaps from '../components/contact/GoogleMaps.astro';
import ContactHero from '../components/contact/ContactHero.astro';
---

<Layout description="Contact me to learn more about how I can help you." title="Contact Â· Reflair">
  <div class="services-img"></div>
  <section class="py-12 sm:py-12">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex -translate-y-72 flex-col items-end">
        <h2 class="mb-6 text-4xl font-medium tracking-tight text-white sm:text-6xl">Contacts</h2>
        <div class="w-20 border-b-2 border-b-white"></div>
